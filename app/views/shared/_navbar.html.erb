          <span class="sr-only">Meu perfil</span>
          <span class="nav-user-img">
            <picture>
              <source srcset="/layout/assets/img/avatar/avatar-illustrated-02.webp" type="image/webp" />
              <img src="/layout/assets/img/avatar/avatar-illustrated-02.png" alt="Usuário" />
            </picture>
          </span>
        </button>
        <ul class="users-item-dropdown nav-user-dropdown dropdown">
          <li>
            <%= link_to root_path do %>
              <i data-feather="user" aria-hidden="true"></i>
              <span>Perfil</span>
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
              <i data-feather="settings" aria-hidden="true"></i>
              <span>Configurações</span>
            <% end %>
          </li>
          <li>
            <%= link_to root_path, class: "danger" do %>
              <i data-feather="log-out" aria-hidden="true"></i>
              <span>Sair</span>
            <% end %>
          </li>
        </ul>
      </div>
