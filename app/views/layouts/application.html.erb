  </head>
  <body class="">
    <div class="page-flex">
      <%= render partial: "shared/sidebar" %>
      <div class="main-wrapper">
        <%= render partial: "shared/navbar" %>
        <main class="main-content">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>